@model curdoperation.Models.Curd
@{
    Layout = null;
}
        <form method="post" asp-controller="Home" asp-action="UpdateCurd">
    <div class="form-group">
        <label>ID</label>
        <input type="number" asp-for="Newid" class="form-control" required="">
    </div>
    <div class="form-group">
        <label>FirstName</label>
        <span asp-validation-for="Firstname" class="formwarning"></span>
        <input type="text" asp-for="Firstname" class="form-control" required="">
    </div>
    <div class="form-group">
        <label>LastName</label>
        <input type="text" asp-for="Lastname" class="form-control" required="">
    </div>
    <div class="form-group">
        <label>birthday</label>
        <span asp-validation-for="Birthdate" class="formwarning"></span>
        <input type="date" asp-for="Birthdate" class="form-control" required="">
    </div>
    <div class="form-group">
        <label>Zodex</label>
        <span asp-validation-for="Zodiac" class="formwarning"></span>
        <input type="text" asp-for="Zodiac" class="form-control" required="">
    </div>
    <div class="form-group">
        <label>Email</label>
        <span asp-validation-for="Email" class="formwarning"></span>
        <input type="email" asp-for="Email" class="form-control" required="">
    </div>
    <div class="form-group">
        <label>Mobile no</label>
        <span asp-validation-for="Mobileno" class="formwarning"></span>
        <input type="number" asp-for="Mobileno" class="form-control" required="">
    </div>

    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
    <input type="submit" class="btn btn-success" value="submit">
</form>

