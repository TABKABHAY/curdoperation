@model curdoperation.Models.Curd
@{
    Layout = null;
}

<h1>@ViewBag.Message</h1>

<form method="post" asp-controller="Home" asp-action="UpdateCurd">
    <div class="form-group">
        <label>ID</label>
        <input autocomplete="off" type="number" asp-for="Newid" class="form-control">
    </div>
    <div class="form-group">
        <label>FirstName</label>
        <span asp-validation-for="Firstname" class="formwarning"></span>
        <input autocomplete="off" type="text" asp-for="Firstname" pattern="[a-zA-Z]{3,30}" title="please enter velid name" class="form-control" required>
    </div>
    <div class="form-group">
        <label>LastName</label>
        <input autocomplete="off" type="text" asp-for="Lastname" pattern="[a-zA-Z]{3,30}" title="please enter velid name" class="form-control" required>
    </div>
    <div class="form-group">
        <label>birthday</label>
        <span asp-validation-for="Birthdate" class="formwarning"></span>
        <input autocomplete="off" type="date" asp-for="Birthdate" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Zodex</label>
        <span asp-validation-for="Zodiac" class="formwarning"></span>
        <input autocomplete="off" list="l1" asp-for="Zodiac" class="form-control" required>
        <datalist id="l1">
            <option>&#9810; Aquarius</option>
            <option>&#9811;	Pisces</option>
            <option>&#9800;	Aries</option>
            <option>&#9801;	Taurus</option>
            <option>&#9802;	Gemini</option>
            <option>&#9803;	Cancer</option>
            <option>&#9804;	Leo</option>
            <option>&#9805;	Virgo</option>
            <option>&#9806;	Libra</option>
            <option>&#9807;	Scorpio</option>
            <option>&#9808;	Sagittarius</option>
            <option>&#9809;	Capricorn</option>
        </datalist>
    </div>
    <div class="form-group">
        <label>Email</label>
        <span asp-validation-for="Email" class="formwarning"></span>
        <input autocomplete="off" type="email" asp-for="Email" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Mobile no</label>
        <span asp-validation-for="Mobileno" class="formwarning"></span>
        <input autocomplete="off" type="text" asp-for="Mobileno" pattern="[0-9]{10}" title="Please enter velid Number" class="form-control" required>
    </div>

    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
    <input type="submit" class="btn btn-success" value="submit">
</form>
